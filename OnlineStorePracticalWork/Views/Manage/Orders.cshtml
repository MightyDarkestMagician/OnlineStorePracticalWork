@model IEnumerable<OnlineStorePracticalWork.Models.Order>

@{
    ViewBag.Title = "Управление заказами";
}

<h2>Управление заказами</h2>

<table class="table">
    <thead>
        <tr>
            <th>Дата заказа</th>
            <th>Общая сумма</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                <td>@order.TotalPrice</td>
                <td>@order.Status</td>
                <td>
                    @Html.ActionLink("Детали", "OrderDetails", new { id = order.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Вернуться на главную", "Index", "Home", new { @class = "btn btn-secondary" })
</div>
