@model IEnumerable<OnlineStorePracticalWork.Models.Product>

@{
    ViewBag.Title = "Товары (для администратора)";
}

<h2>Товары (для администратора)</h2>

<p>
    @Html.ActionLink("Создать новый", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Price)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Category)</th>
            <th>Изображение</th>
            <th>Продавец</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Category)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@Url.Content(item.ImagePath)" alt="Product Image" class="img-thumbnail" style="max-height: 50px;" />
                    }
                    else
                    {
                        <span>Нет изображения</span>
                    }
                </td>
                <td>
                    @if (item.Seller != null)
                    {
                        @item.Seller.UserName
                    }
                    else
                    {
                        <span>Не указан</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.ID }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
