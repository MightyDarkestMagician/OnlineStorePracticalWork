@model OnlineStorePracticalWork.Models.Product

@{
    ViewBag.Title = "Детали продукта";
}

<h2>Детали продукта: @Model.Name</h2>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4>@Model.Name</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Название</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Описание</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Цена</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-3">Количество на складе</dt>
            <dd class="col-sm-9">@Model.Stock</dd>

            <dt class="col-sm-3">Категория</dt>
            <dd class="col-sm-9">@Model.Category</dd>

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <dt class="col-sm-3">Изображение</dt>
                <dd class="col-sm-9">
                    <img src="@Url.Content(Model.ImagePath)" alt="Product Image" class="img-thumbnail" style="max-height: 200px;" />
                </dd>
            }

            @if (Model.Seller != null)
            {
                <dt class="col-sm-3">Продавец</dt>
                <dd class="col-sm-9">@Model.Seller.UserName</dd>
            }
        </dl>
    </div>
    <div class="card-footer">
        @if (User.IsInRole("Admin") || User.IsInRole("Seller"))
        {
            @Html.ActionLink("Редактировать", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" }) |
<form action="@Url.Action("Delete", "Product", new { id = Model.ID })" method="post" onsubmit="return confirm('Вы уверены, что хотите удалить этот продукт?');" style="display:inline;">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Удалить</button>
</form>
}
        @if (!User.IsInRole("Admin") && !User.IsInRole("Seller"))
        {
            <form action="@Url.Action("AddToCart", "Cart")" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="productId" value="@Model.ID" />
                <input type="hidden" name="quantity" value="1" />
                <button type="submit" class="btn btn-success">Купить</button>
            </form>
        }
        @Html.ActionLink("Назад к списку", "Index", "Home", null, new { @class = "btn btn-secondary" })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
