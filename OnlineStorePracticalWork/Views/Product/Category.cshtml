@model IEnumerable<OnlineStorePracticalWork.Models.Product>

@{
    ViewBag.Title = "Товары в категории " + ViewBag.CategoryName;
}

<h2>Товары в категории @ViewBag.CategoryName</h2>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Цена</th>
            <th>Изображение</th>
            <th>Добавил</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>
                    <img src="@Url.Content(item.ImagePath)" alt="Product Image" class="img-thumbnail" style="max-height: 100px;" />
                </td>
                <td>@item.Seller.UserName</td>
                <td>
                    @Html.ActionLink("Детали", "Details", new { id = item.ID }, new { @class = "btn btn-info" })
                    @if (User.IsInRole("Admin") || User.IsInRole("Seller"))
                    {
                        @: |
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.ID }, new { @class = "btn btn-warning" })
                        @: |
                        @Html.ActionLink("Удалить", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Вернуться к списку", "Index", "Product", null, new { @class = "btn btn-secondary" })
</div>
