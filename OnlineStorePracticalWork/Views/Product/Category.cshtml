@model IEnumerable<OnlineStorePracticalWork.Models.Product>

@{
    ViewBag.Title = "Товары по категориям";
}

<h2>Товары в категории: @ViewBag.CategoryName</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="@item.ImageUrl" alt="@item.Name" class="img-responsive" />
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>@item.Description</p>
                    <p><strong>Цена: </strong>@item.Price.ToString("C")</p>
                    <p><strong>В наличии: </strong>@item.Stock</p>
                    <p>@Html.ActionLink("Детали", "Details", new { id = item.ID }, new { @class = "btn btn-primary" })</p>
                </div>
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Вернуться к категориям", "Categories", null, new { @class = "btn btn-secondary" })
</div>
