            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt>
            Изображение
        </dt>
        <dd>
            <img src="@Url.Content(Model.ImagePath)" alt="Product Image" class="img-thumbnail" style="max-height: 150px;" />
