@model IEnumerable<OnlineStorePracticalWork.Models.Product>

@{
    ViewBag.Title = "Мои товары";
}

<h2>Мои товары</h2>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Категория</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@product.Price</td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", "Product", new { id = product.ID }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Удалить", "Delete", "Product", new { id = product.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
